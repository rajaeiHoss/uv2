                <View style="@style/ViewLineParent"/>
                <RelativeLayout android:id="@+id/config_datetime_dst_rl_mode" style="@style/RelativeLayoutParent">
                    <TextView android:text="@string/config_Mode" style="@style/TvParentLeft"/>
                    <TextView android:id="@+id/config_datetime_dst_tv_mode" android:text="" style="@style/TvRecordRight"/>
                </RelativeLayout>
                <View style="@style/ViewLineParent"/>
