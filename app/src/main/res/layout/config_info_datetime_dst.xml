                    <TextView android:id="@+id/config_datetime_dst_tv_endmonth" android:text="" style="@style/TvRecordRight"/>
                </RelativeLayout>
                <View style="@style/ViewLineParent"/>
                <RelativeLayout android:id="@+id/config_datetime_dst_rl_endweek" style="@style/RelativeLayoutParent">
