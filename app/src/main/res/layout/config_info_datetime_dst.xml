                    <TextView android:id="@+id/config_datetime_dst_tv_startday" android:text="" style="@style/TvRecordRight"/>
                </RelativeLayout>
                <View style="@style/ViewLineParent"/>
                <TextView android:id="@+id/config_datetime_dst_tv_starttime" style="@style/DateTimeTv"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/config_datetime_dst_ll_startdatetime" android:background="@drawable/corners_bg_parent" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="5dp" android:layout_marginRight="10dp" android:layout_marginBottom="10dp">
                <com.streamax.view.VsTextView android:id="@+id/config_datetime_dst_tv_startdatetime" style="@style/DateTimeTv"/>
            </LinearLayout>
            <TextView android:textSize="18sp" android:textColor="#000000" android:gravity="center_vertical" android:paddingTop="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="@string/config_TO"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/config_datetime_dst_ll_endmwdhms" android:background="@drawable/corners_bg_parent" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="5dp" android:layout_marginRight="10dp" android:layout_marginBottom="10dp">
                <RelativeLayout android:id="@+id/config_datetime_dst_rl_endmonth" style="@style/RelativeLayoutParent">
