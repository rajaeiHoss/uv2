<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/mr_cast_meta" android:paddingTop="12dp" android:paddingBottom="32dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="24dp" android:paddingEnd="24dp">
    <ImageButton android:layout_gravity="center_vertical" android:id="@+id/mr_cast_close_button" android:background="?attr/selectableItemBackgroundBorderless" android:layout_width="24dp" android:layout_height="24dp" android:src="?attr/mediaRouteCloseDrawable"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_below="@+id/mr_cast_close_button">
        <ImageView android:id="@+id/mr_cast_meta_art" android:layout_width="36dp" android:layout_height="36dp" android:scaleType="fitCenter"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:paddingLeft="8dp" android:paddingRight="8dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <TextView android:textSize="14sp" android:ellipsize="end" android:id="@+id/mr_cast_meta_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1"/>
            <TextView android:textSize="13sp" android:ellipsize="end" android:id="@+id/mr_cast_meta_subtitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1"/>
        </LinearLayout>
        <Button android:id="@+id/mr_cast_stop_button" android:background="?attr/selectableItemBackgroundBorderless" android:layout_width="114dp" android:layout_height="36sp" android:text="@string/mr_controller_stop_casting"/>
    </LinearLayout>
</RelativeLayout>
