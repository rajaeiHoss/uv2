<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center_vertical" android:orientation="horizontal" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:id="@+id/dev_head_iv_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:src="@drawable/arrow_down" android:contentDescription="@null"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="0dp" android:layout_height="50dp" android:layout_marginLeft="6dp" android:layout_weight="1">
        <TextView android:textStyle="bold" android:textColor="#000000" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/dev_head_tv_devname" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <TextView android:textColor="#000000" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/dev_head_tv_devinfo" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageView android:id="@+id/dev_head_iv_checkicon" android:padding="10dp" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginRight="10dp" android:src="@drawable/checkbox_uncheck"/>
</LinearLayout>
