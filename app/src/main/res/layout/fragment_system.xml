            <LinearLayout android:layout_gravity="center" android:orientation="horizontal" android:id="@+id/systemsetting_endtime_radio" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp">
                <TextView android:textSize="20sp" android:textColor="#000000" android:layout_gravity="left|center_vertical|center_horizontal|center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/endtimeconfig"/>
                <com.streamax.client.SegmentedRadioGroup android:orientation="horizontal" android:id="@+id/systemSet_srg_push_end" android:layout_width="match_parent" android:layout_height="wrap_content" android:checkedButton="@+id/second30end_text">
                    <RadioButton android:textAppearance="?android:attr/textAppearanceSmall" android:textColor="@color/radio_colors" android:gravity="center" android:id="@+id/systemSet_rb_30Sec_end" android:button="@null" android:minWidth="40dp" android:minHeight="33dp" android:text="@string/second30" android:layout_weight="1"/>
                    <RadioButton android:textAppearance="?android:attr/textAppearanceSmall" android:textColor="@color/radio_colors" android:gravity="center" android:id="@+id/systemSet_rb_60Sec_end" android:button="@null" android:minWidth="40dp" android:minHeight="33dp" android:text="@string/second60" android:layout_weight="1"/>
                    <RadioButton android:textAppearance="?android:attr/textAppearanceSmall" android:textColor="@color/radio_colors" android:gravity="center" android:id="@+id/systemSet_rb_120Sec_end" android:button="@null" android:minWidth="40dp" android:minHeight="33dp" android:text="@string/second120" android:layout_weight="1"/>
                    <RadioButton android:textAppearance="?android:attr/textAppearanceSmall" android:textColor="@color/radio_colors" android:gravity="center" android:id="@+id/systemSet_rb_180Sec_end" android:button="@null" android:minWidth="40dp" android:minHeight="33dp" android:text="@string/second180" android:layout_weight="1"/>
