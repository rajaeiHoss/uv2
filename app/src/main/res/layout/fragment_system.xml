            <LinearLayout android:layout_gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp">
                <TextView android:textSize="20sp" android:textColor="#000000" android:layout_gravity="left|center_vertical|center_horizontal|center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/starttimeconfig"/>
                <com.streamax.client.SegmentedRadioGroup android:orientation="horizontal" android:id="@+id/systemSet_srg_push_start" android:layout_width="match_parent" android:layout_height="wrap_content" android:checkedButton="@+id/second30start_text">
