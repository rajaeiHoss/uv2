<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@color/pickerview_bg_topbar" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:id="@+id/play_title" android:background="@drawable/top" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="18sp" android:textColor="#ffffff" android:gravity="center" android:layout_gravity="center" android:id="@+id/ai_cal_title_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/video_playback"/>
    </FrameLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/play_layout" android:background="#000000" android:layout_width="match_parent" android:layout_height="220dp">
        <com.streamax.client.VideoGroup android:id="@+id/play_videogroup" android:layout_width="match_parent" android:layout_height="match_parent">
            <ImageView android:id="@+id/multiplay_controlbar_play" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/play_start" android:layout_centerInParent="true"/>
        </com.streamax.client.VideoGroup>
    </LinearLayout>
    <LinearLayout android:layout_gravity="center" android:orientation="horizontal" android:id="@+id/play_progress" android:background="#27262e" android:layout_width="match_parent" android:layout_height="36dp">
        <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="2dp">
            <TextView android:textSize="16sp" android:textColor="#ffffff" android:gravity="center" android:id="@+id/remote_playback_progress_start_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="00:00:00" android:layout_weight="0.25"/>
        </LinearLayout>
        <SeekBar android:layout_gravity="center" android:id="@+id/remote_playback_progressbar" android:layout_width="0dp" android:layout_height="wrap_content" android:max="100" android:progress="50" android:secondaryProgress="0" android:progressDrawable="@drawable/play_seekbar_background" android:thumb="@drawable/play_seekbar_thumb" android:layout_weight="0.75" style="?android:attr/progressBarStyleHorizontal"/>
        <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="2dp">
            <TextView android:textSize="16sp" android:textColor="#ffffff" android:gravity="center" android:id="@+id/remote_playback_progress_end_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="00:00:00" android:layout_weight="0.25"/>
            <TextView android:textSize="16sp" android:textColor="#ffffff" android:gravity="center" android:id="@+id/remote_playback_playrate_text" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="2dp" android:text="@string/initrate" android:layout_weight="0.25"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:layout_gravity="center" android:orientation="horizontal" android:id="@+id/play_control" android:background="#27262e" android:layout_width="match_parent" android:layout_height="32dp">
        <ImageView android:layout_gravity="center" android:id="@+id/multiplay_controlbar_sound" android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/play_sound" android:layout_weight="1" android:contentDescription="@string/sound"/>
        <ImageView android:layout_gravity="center" android:id="@+id/multiplay_controlbar_slow" android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/play_slow" android:layout_weight="1" android:contentDescription="@string/slow"/>
        <ImageView android:layout_gravity="center" android:id="@+id/multiplay_controlbar_stop" android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/play_stop" android:layout_weight="1" android:contentDescription="@string/stop"/>
        <ImageView android:layout_gravity="center" android:id="@+id/multiplay_controlbar_fast" android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/play_fast" android:layout_weight="1" android:contentDescription="@string/fast"/>
        <ImageView android:layout_gravity="center" android:id="@+id/multiplay_controlbar_full" android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/play_full" android:layout_weight="1" android:contentDescription="@string/capture"/>
    </LinearLayout>
    <RelativeLayout android:id="@+id/play_tab" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="0dp">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.flyco.tablayout.SlidingTabLayout android:id="@+id/tab_layout" android:background="#eeeeee" android:layout_width="match_parent" android:layout_height="48dp" app:tl_indicator_color="#0086cd" app:tl_indicator_height="1.5dp" app:tl_indicator_width_equal_title="true" app:tl_tab_padding="22dp" app:tl_tab_space_equal="true" app:tl_textSelectColor="#0086cd" app:tl_textUnselectColor="#66000000" app:tl_textsize="18sp"/>
            <androidx.viewpager.widget.ViewPager android:id="@+id/view_pager" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
