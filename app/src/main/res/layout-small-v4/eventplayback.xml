            <TextView android:layout_gravity="center" android:id="@+id/eventplayback_busytext" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/updating"/>
        </LinearLayout>
    </FrameLayout>
</com.streamax.client.EventPlayback>
