            <ProgressBar android:layout_gravity="center" android:id="@+id/remoteplayback_busyprogress" android:layout_width="wrap_content" android:layout_height="wrap_content" style="?android:attr/progressBarStyleLarge"/>
            <TextView android:layout_gravity="center" android:id="@+id/remoteplayback_busytext" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/searching"/>
        </LinearLayout>
    </FrameLayout>
</com.streamax.client.RemotePlayback>
