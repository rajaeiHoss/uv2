<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:id="@+id/pushconfig_title" android:background="@drawable/top" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:textColor="#ffffff" android:layout_gravity="left|center_vertical|center_horizontal|center" android:id="@+id/help_title_button_more" android:background="@drawable/topbarbtnbg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/more"/>
        <TextView android:textSize="16sp" android:textColor="#ffffff" android:gravity="center" android:layout_gravity="center" android:id="@+id/pushconfig_title_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pushconfig"/>
    </FrameLayout>
    <FrameLayout android:background="#33333333" android:layout_width="match_parent" android:layout_height="match_parent">
        <com.streamax.client.PushDeviceList android:id="@+id/pushconfigdevlistview" android:background="#99ffffff" android:fadingEdge="none" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent" android:scrollingCache="false" android:cacheColorHint="#00000000" android:dividerHeight="1px" android:minHeight="50px" android:layout_weight="1"/>
        <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="vertical" android:id="@+id/pushconfig_busy" android:background="#88333333" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="match_parent">
            <ProgressBar android:layout_gravity="center" android:id="@+id/pushconfig_busyprogress" android:layout_width="wrap_content" android:layout_height="wrap_content" style="?android:attr/progressBarStyleLarge"/>
            <TextView android:layout_gravity="center" android:id="@+id/pushconfig_busytext" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/updating"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
